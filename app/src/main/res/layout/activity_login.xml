<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Imagen de fondo en el encabezado -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_log"
        android:background="@drawable/rounded_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/containerCard" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="184dp"
        android:layout_height="137dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card blanca redondeada inferior -->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerCard"
        android:layout_width="345dp"
        android:layout_height="464dp"
        android:layout_marginTop="-32dp"
        android:elevation="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="36dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImage">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Texto de Bienvenida -->
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Bienvenido:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Label Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Introduce tu email :"
                    android:textSize="14sp" />

                <!-- Input Email -->
                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_background"
                    android:hint="email@domain.com"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="12dp" />

                <!-- Label Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Introduce tu contraseña :"
                    android:textSize="14sp" />

                <!-- Input Password -->
                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingHorizontal="12dp" />

                <!-- ¿Olvidaste contraseña? -->
                <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:text="¿Olvidaste la contraseña?"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <!-- Botón Login -->
                <Button
                    android:id="@+id/loginButton2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#ED4525"
                    android:text="Log in"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />


                <!-- Términos y condiciones -->
                <TextView
                    android:id="@+id/terminos123"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By clicking continue, you agree to our Terms of Service and Privacy Policy"
                    android:textAlignment="center"
                    android:textColor="#828282"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
