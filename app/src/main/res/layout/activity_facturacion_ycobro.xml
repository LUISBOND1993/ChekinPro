<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Flecha de regreso -->
    <ImageView
        android:id="@+id/retroceso"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:src="@drawable/flecha"
        android:contentDescription="Flecha de retroceso"
        android:layout_marginBottom="8dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/textFacturacionYCobro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facturación y Cobro"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <!-- Línea separadora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B0B0B0"
        android:layout_marginBottom="16dp" />

    <!-- Tarjeta de información -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp">

        <!-- Cada fila: Título + Dato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del conjunto:"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ovalNombreConjuntoProto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Portal el Virrey"
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Placa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Placa:"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ovalNumeroPlaca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RKL732"
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Puesto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Puesto:"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ovalPuestoProto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Puesto 30"
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Nombre del residente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del residente:"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ovalNombreResidenteProto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ricardo Suarez Bonilla"
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Nombre del visitante -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del visitante:"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ovalNombreVisitanteProto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carlos Sutachan"
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Ingreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingreso:"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ovalIngreso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04-02-2025 17:40:00 p.m."
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Salida -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salida:"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/ovalSalidaProto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="04-02-2025 19:00:00 p.m."
                android:textColor="#FFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Total Cobro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Cobro:"
                android:textColor="#000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/ovalTotalCobroProto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$3600"
                android:textColor="#FFF"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Icono de Check -->
    <ImageView
        android:id="@+id/icono_check"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/check_circle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:contentDescription="Ícono check de confirmación" />

    <!-- Línea separadora inferior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#B0B0B0" />

</LinearLayout>
